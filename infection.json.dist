{
    "timeout": 10,
    "source": {
        "directories": [
            "."
        ],
        "excludes": [
            "vendor",
            "Tests",
            "bench",
            "bin",
            "build",
            "docker",
            "docs"
        ]
    },
    "logs": {
        "text": "./build/infection/infection.log",
        "badge": {
            "branch": "master"
        }
    },
    "tmpDir": "./build/infection/",
    "phpUnit": {
        "customPath": "./vendor/bin/phpunit"
    },
    "mutators": {
        "@default": true,
        "MethodCallRemoval": false,
        "ArrayItemRemoval": false,
        "TrueValue": {
            "ignore": ["Koded\\DIContainer"]
        },
        "FalseValue": {
            "ignore": ["Koded\\DIContainer"]
        },
        "Throw_": {
            "ignore": ["Koded\\DIContainer"]
        }
    },
    "testFramework": "phpunit",
    "bootstrap": "./Tests/bootstrap.php"
}